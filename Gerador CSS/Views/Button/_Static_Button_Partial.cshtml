@model Gerador_CSS.Models.Button
@using Gerador_CSS.Models;

<div>
    <table>
        <tr>
            <td style="width: 133px;">Texto do Botão:</td>
            <td><input type="text" class="my_input" onchange="ChangeButtonInnerText(this)" value="Button" /></td>
        </tr>
    </table>
</div>


<div id="div_static_options" align="center" class="primary_menu" onclick="OpenStaticButtonOptions()">
    <span>Botão Estático &#9652;</span>
</div>

<table id="static_options" style="display: none;">

    <tbody>
        <tr>
            <td>Cor de Fundo:</td>
            <td> <input id="background_color_selector" style="width: 100px; height: 30px;" onchange="BackgroundColorSelector(this)" type="color" value="@Model.Static_Background_Color" /> </td>
        </tr>
    </tbody>
</table>




<div id="div_static_font_options" align="center" class="secondary_menu" onclick="OpenStaticFontButtonOptions()">
    <span>Fonte &#9652;</span>
</div>
<table id="static_font_options" style="display: none;">
    <tr>
        <td>Cor:</td>
        <td> <input id="color_selector" style="width: 100px; height: 30px;" onchange="ColorSelector(this)" value="@Model.Static_Color" type="color" /> </td>
    </tr>
    <tr>
        <td>Tamanho:</td>
        <td> <input id="static_font_size_range" type="range" class="range" value="@Model.Static_Font_Size.Replace("px", string.Empty)" min="1" max="100" onchange="FontSize(this)" /> </td>
        <td><input id="font_size_number" onchange="FontSizeNumberChanged(this)" min="0" max="100" value="@Model.Static_Font_Size.Replace("px", string.Empty)" class="input-number" type="number" /></td>
        <td><span>px</span></td>
    </tr>
    <tr>
        <td>Negrito:</td>
        <td> <input id="static_font_weight_range" type="range" class="range" value="@Model.Static_Font_Weight" min="0" max="1000" step="100" onchange="FontWeight(this)" /> </td>
        <td><input id="font_weight_number" step="100" min="0" max="1000" onchange="FontWeightNumberChanged(this)" value="@Model.Static_Font_Weight" class="input-number" type="number" /></td>

    </tr>
    <tr>
        <td>Estilo:</td>
        <td>
            <input type="hidden" id="select_font_style_hidden" value="@Model.Static_Font_Style"/>
            <select class="select" id="select_font_style" onchange="FontStyle(this)">
                <option value="normal">Normal</option>
                <option value="italic">Itálico</option>
                <option value="oblique">Oblíquo</option>
                <option value="initial">Inícial</option>
                <option value="inherit">Herdar</option>
            </select>
        </td>
    </tr>
    <tr>
        <td>SOMBRAS</td>
    </tr>
    <tr>
        <td>Habilitar Sombras:</td>
        <td> <input id="checkbox_font_shadow_enable" type="checkbox" onchange="FontShadowEnable(this)" /> </td>
    </tr>

    <tr>
        <td>Deslocamento Horizontal:</td>
        <td> <input id="range_font_shadow_offset_x" type="range" class="range" value="0" min="0" max="100" onchange="FontShadowOffsetX(this)" /> </td>
        <td><input id="font_shadow_offset_x_number" onchange="FontShadowOffsetXNumberChanged(this)" min="0" max="100" value="0" class="input-number" type="number" /></td>
        <td><span>px</span></td>
    </tr>
    <tr>
        <td>Deslocamento Vertical:</td>
        <td> <input id="range_font_shadow_offset_y" type="range" class="range" value="0" min="0" max="100" onchange="FontShadowOffsetY(this)" /> </td>
        <td><input id="font_shadow_offset_y_number" onchange="FontShadowOffsetYNumberChanged(this)" min="0" max="100" value="0" class="input-number" type="number" /></td>
        <td><span>px</span></td>
    </tr>
    <tr>
        <td>Raio de Borrão:</td>
        <td> <input id="range_font_shadow_blur_radius" type="range" class="range" value="0" min="0" max="100" onchange="FontShadowBlurRadius(this)" /> </td>
        <td><input id="font_shadow_blur_radius_number" onchange="FontShadowBlurRadiusNumberChanged(this)" min="0" max="100" value="0" class="input-number" type="number" /></td>
        <td><span id="">px</span></td>
    </tr>
    <tr>
        <td>Cor da Sombra:</td>
        <td> <input id="font_shadow_color_selector" style="width: 100px; height: 30px;" onchange="FontShadowColorSelector(this)" type="color" /> </td>
    </tr>
</table>





